datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Reports {
  id        String   @id @default(cuid())
  data      Json? // Report object
  createdAt DateTime @default(now())
}

model Session {
  id          String   @id @default(cuid())
  anonymousId String   @unique
  metadata    Json? // JSON object with metadata (device, browser, os, etc.)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  events      Event[]
}

model Event {
  id        String   @id @default(cuid())
  sessionId String   
  session   Session  @relation(fields: [sessionId], references: [id])
  type      String // to be defined
  metadata  Json? // JSON object with page title, description, cookies, url, etc. 
  data      Json? // JSON object with data (e.g. form data, button clicked, etc.)
  createdAt DateTime @default(now())
}
